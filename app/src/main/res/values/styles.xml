<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Custom Style for our app-->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
        <!--<item name="android:statusBarColor" tools:ignore="NewApi">@color/colorBlack</item>-->
        <!--<item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorPrimary</item>-->
    </style>
</resources>
